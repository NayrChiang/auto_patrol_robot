<?xml version="1.0"?>
<!-- Ch 6.2.5, 6.3 -->    
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find robot_description)/urdf/robot/common_inertia.xacro"/>
    <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <!-- IMU Component -->
        <link name="${wheel_name}_link">
            <!-- Part Description -->
            <visual>
                <!-- Origin's Translation and Rotation -->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <!-- Geometry -->
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
                <!-- Material and Color -->
                <material name="yellow">
                    <color rgba="1.0 1.0 0.0 0.8"/>
                </material>
            </visual>
            <collision>
                <!-- Origin's Translation and Rotation -->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <!-- Geometry -->
                <geometry>
                    <cylinder radius="0.032" length="0.04"/>
                </geometry>
                <!-- Material and Color -->
                <material name="yellow">
                    <color rgba="1.0 1.0 0.0 0.8"/>
                </material>
            </collision>

            <xacro:cylinder_inertia m="0.05" r="0.032" h="0.04"/>
        </link>

        <!-- Joints -->
        <joint name="${wheel_name}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${wheel_name}_link"/>
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <axis xyz="0.0 1.0 0.0"/>
        </joint>

        <gazebo reference="${wheel_name}_link">
            <material>Gazebo/Yellow</material>
            <mu1 value="20.0"/>
            <mu2 value="20.0"/>
            <kp value="1000000000.0"/>
            <kd value="1.0"/>
        </gazebo>
    </xacro:macro>

</robot>
